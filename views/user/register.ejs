<div class="content">
  <div class="item">
    <h1>Register</h1>

    <form action="/register" method="POST">
      <lu class="section">
        <strong>Username:</strong>
        <input
          type="text"
          id="username"
          name="username"
          placeholder="Username"
          required
        />
      </lu>
      <lu class="section">
        <strong>Password:</strong>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Password"
          required
        />
      </lu>
      <lu class="section">
        <strong>Role:</strong>
        <select id="role" name="role" required>
          <option value="Supreme Overlord">Supreme Overlord</option>
          <option value="Master Craftsman">Master Craftsman</option>
          <option value="Chief Carpenter">Chief Carpenter</option>
          <option value="Chief Sawdust Maker">Chief Sawdust Maker</option>
          <option value="Lead Artisan">Lead Artisan</option>
          <option value="Journeyman">Journeyman</option>
          <option value="Woodsmith">Woodsmith</option>
          <option value="Apprentice Carver">Apprentice Carver</option>
          <option value="Lumberjack">Lumberjack</option>
          <option value="Woodchip Wonder">Woodchip Wonder</option>
          <option value="Chisel User">Chisel User</option>
        </select>
      </lu>

      <ul class="controls">
        <button type="submit">Register</button>
      </ul>
    </form>
  </div>
</div>
